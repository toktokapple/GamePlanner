<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/maincalendarrectangle2"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/slidelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/btnclose"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentBottom="false"
                        android:layout_gravity="top"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="150dp"
                        android:background="#A4AECF"></TextView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/editpencil" />

                    <TextView
                        android:id="@+id/DateChoice"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="-5dp"
                        android:elevation="8dp"
                        android:paddingTop="1dp"
                        android:text="내용"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-40dp"
                    android:layout_marginBottom="10dp">

                    <android.widget.EditText
                        android:id="@+id/memo"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/memorectangle"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/orangealarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="185dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colororangeellipse" />

                    <ImageView
                        android:id="@+id/purplealarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="155dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colorpurpleellipse" />

                    <ImageView
                        android:id="@+id/greenalarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colorgreenellipse" />

                    <ImageView
                        android:id="@+id/bluealarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colorblueellipse" />

                    <ImageView
                        android:id="@+id/yellowalarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/coloryellowellipse" />

                    <ImageView
                        android:id="@+id/redalarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colorredellipse"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="Color"
                        android:textStyle="bold" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/savebutton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/alarmsave"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClickSaveButton"
                        android:text="저장"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp" />
                </FrameLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>
