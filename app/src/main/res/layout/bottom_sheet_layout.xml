<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/maincalendarrectangle2"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/slidelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/titletext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"
                        android:hint="일정을 입력해주세요"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentBottom="false"
                        android:layout_gravity="top"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginRight="20dp"
                        android:background="#A4AECF"></TextView>

                    <TextView
                        android:id="@+id/btnclose"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentBottom="false"
                        android:layout_gravity="top"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="150dp"
                        android:background="#A4AECF"></TextView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/clock" />

                    <TextView
                        android:id="@+id/DateChoice"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="-5dp"
                        android:elevation="8dp"
                        android:paddingTop="1dp"
                        android:text="날짜 / 시간"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="30dp"
                        android:text="월       일"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <NumberPicker
                        android:id="@+id/monthPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:scaleX="0.4"
                        android:scaleY="0.35"
                        android:theme="@style/NumberPickerTheme" />

                    <NumberPicker
                        android:id="@+id/dayPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="-10dp"
                        android:scaleX="0.4"
                        android:scaleY="0.35"
                        android:theme="@style/NumberPickerTheme" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="135dp"
                        android:layout_marginTop="30dp"
                        android:text="시       분"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <NumberPicker
                        android:id="@+id/hourPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="-10dp"
                        android:scaleX="0.4"
                        android:scaleY="0.35"
                        android:theme="@style/NumberPickerTheme" />

                    <NumberPicker
                        android:id="@+id/minutePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="-10dp"
                        android:scaleX="0.4"
                        android:scaleY="0.35"
                        android:theme="@style/NumberPickerTheme" />

                    <Spinner
                        android:id="@+id/ampmSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180dp"
                        android:layout_marginTop="68dp"
                        android:entries="@array/ampm_options"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:theme="@style/NumberPickerTheme" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-40dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="-3dp"
                        android:text="메모"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <android.widget.EditText
                        android:id="@+id/memo"
                        android:layout_width="290dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/memorectangle"
                        android:clickable="true"
                        android:focusable="true"
                        android:hint="메모를 입력하세요"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/editpencil" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/orangealarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="185dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colororangeellipse" />

                    <ImageView
                        android:id="@+id/purplealarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="155dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colorpurpleellipse" />

                    <ImageView
                        android:id="@+id/greenalarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colorgreenellipse" />

                    <Switch
                        android:id="@+id/alarmswitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="25dp" />

                    <ImageView
                        android:id="@+id/bluealarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colorblueellipse" />

                    <ImageView
                        android:id="@+id/yellowalarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/coloryellowellipse" />

                    <ImageView
                        android:id="@+id/redalarm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/colorredellipse"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="40dp"
                        android:text="알람"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="Color"
                        android:textStyle="bold" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/savebutton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="저장"
                        android:textColor="#FFFFFF"
                        android:textSize="19sp"
                        android:onClick="onClickSaveButton"/>
                </FrameLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>
